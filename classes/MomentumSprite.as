// Momentum classpackage {	import flash.display.Sprite;	import flash.events.Event;	import flash.events.MouseEvent;	public class MomentumSprite extends Sprite {				private var MomentumX:Momentum=new Momentum({minValue:100, maxValue:500, interval:1000/stage.frameRate});		private var MomentumY:Momentum=new Momentum({minValue:100, maxValue:500, interval:1000/stage.frameRate});		private var dx,dy:int;		private var dragged:Boolean=false;				public function MomentumSprite():void {			MomentumX.value=x;			MomentumY.value=y;			addEventListener(MouseEvent.MOUSE_DOWN,onMouse);		}				function onMouse(e:MouseEvent):void {			switch(e.type) {				case MouseEvent.MOUSE_DOWN:					if(dragged) {						removeEventListener(Event.ENTER_FRAME,onEnterFrame);					}					stage.addEventListener(MouseEvent.MOUSE_MOVE,onMouse);					stage.addEventListener(MouseEvent.MOUSE_UP,onMouse);					dx=-e.localX;					dy=-e.localY;					MomentumX.value=x=e.stageX+dx;					MomentumY.value=y=e.stageY+dy;					break;				case MouseEvent.MOUSE_MOVE:					MomentumX.value=x=e.stageX+dx;					MomentumY.value=y=e.stageY+dy;					break;				case MouseEvent.MOUSE_UP:					stage.removeEventListener(MouseEvent.MOUSE_MOVE,onMouse);					stage.removeEventListener(MouseEvent.MOUSE_UP,onMouse);					MomentumX.release();					MomentumY.release();					dragged=true;					addEventListener(Event.ENTER_FRAME,onEnterFrame);					break;			}		}				function onEnterFrame(e:Event):void {			if(MomentumX.inMotion) {				x=MomentumX.value;				trace('x='+x);			}			if(MomentumY.inMotion) {				y=MomentumY.value;			}		}			}}